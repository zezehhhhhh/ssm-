<!--pages/admin/mCenter/mCenter.wxml-->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class='item'>
    <text class='left'>编号：</text>
    <text class='right'>{{user.id}}</text>
  </view>
  <view class='item'>
    <text class='left'>姓名：</text>
    <text class='right'>{{user.name}}</text>
  </view>
  <view class='item' bindtap='resetpwd'>
    <text class='left'> 修改密码</text>
    <text class='right'>></text>
  </view>
  <view class='item' bindtap='exit'>
    <text class='left'>退出</text>
    <text class='right'>>>></text>
  </view>
</view>