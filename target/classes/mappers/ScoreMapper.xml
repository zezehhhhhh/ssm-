<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baidu.dao.ScoreMapper">
    <resultMap id="baseMap" type="com.baidu.pojo.Score">
        <result property="sid" column="sid"/>
        <result property="cid" column="cid"/>
        <result property="score" column="score"/>
    </resultMap>
<!--    <resultMap id="userMap" type="com.baidu.pojo.Student" extends="baseMap">-->
<!--        <association property="myDept" javaType="com.baidu.pojo.Score">-->
<!--            <result property="id" column="rid"></result>-->
<!--            <result property="deptName" column="deptName"></result>-->
<!--        </association>-->
<!--    </resultMap>-->
    <select id="getAllScore" resultMap="baseMap">
        select Score.*
        from Score
    </select>
    <select id="getScore" resultMap="baseMap">
        select Score.*
        from Score
        where sid = #{sid} and  cid = #{cid}
    </select>
    <insert id="addScore" parameterType="Score">
        INSERT INTO Score(sid,cid,score) VALUES (#{sid},#{cid},#{score})
    </insert>
    <update id="updateScore" parameterType="Score">
        update Score set sid=#{score.sid},cid=#{score.cid},score=#{score.score}
        where sid = #{osid} and  cid = #{ocid}
    </update>
    <delete id="delScore">
        delete from Score
        where sid = #{sid} and  cid = #{cid}
    </delete>
    <select id="check" resultMap="baseMap">
        select score.*
        from score
        where score.sid=#{sid} and score.cid= #{cid}
    </select>
</mapper>